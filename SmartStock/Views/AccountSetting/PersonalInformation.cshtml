
@{
    ViewBag.Title = "PersonalInformation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using SmartStock.Core.Models
@model AccountInfo

@Html.HiddenFor(m => m.UserId)

<section class="content-header">
    <h1>
        个人信息
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-user"></i>设置</a></li>
        <li class="active">个人信息</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">@Model.UserName</h3>
                </div>
                <div class="form-horizontal">
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-sm-2 control-label redAsteriskBefore">姓名</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">电话</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">邮箱</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">备注</label>
                            <div class="col-sm-10">
                                @Html.TextAreaFor(m => m.Notes, 5, 20, new { @class = "form-control note-area" })
                            </div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <button type="button" class="btn btn-primary pull-right account-save-btn">保存</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/Scripts/accountsetting/personalInfo.js"></script>

@section Scripts{
    <script type="text/javascript">

        $(document).ready(function () {
            bindPersonalInformationEvent();
        });

    </script>
}

