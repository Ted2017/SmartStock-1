
@{
    ViewBag.Title = "TransferOrderDashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using SmartStock.Core.Models
@model TransferOrderSummary

<section class="content-header">
    <h1>
        转账记录
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>统计</a></li>
        <li class="active">转账记录</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <!-- LINE CHART -->
            <div class="box box-info">
                <div class="box-body admin-content dashboard-partial">
                    @if (Model.TransferOrders != null && Model.TransferOrders.Count > 0)
                    {
                        @Html.Partial("_TransferOrderDashboardPartial", Model)
                    }
                    else
                    {
                        <div class="col-md-12">
                            <!-- DONUT CHART -->
                            <div class="box">
                                <div class="box-header with-border">
                                    <i class="fa fa-users"></i> <h3 class="box-title">没有相关数据</h3>
                                    <div class="box-tools pull-right">
                                        <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                                    </div>
                                </div>
                                <div class="box-body">
                                    请重新选择筛选时间
                                </div><!-- /.box-body -->
                            </div><!-- /.box -->
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>