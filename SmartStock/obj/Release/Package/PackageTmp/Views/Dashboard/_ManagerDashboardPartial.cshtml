
@using SmartStock.Core.Models
@model ManagerViewerSummary

@if (Model.ManagerViewTableSummary != null && Model.ManagerViewTableSummary.Count > 0)
{
    <div class="col-md-12">
        <div class="box">
            <div class="box-header">
                <i class="fa fa-list"></i><h3 class="box-title">盈利明细</h3>
            </div>
            <div class="box-body admin-content">
                <table id="DashboardDataTbl" class="table table-bordered table-striped dashboard-data">
                    <thead>
                        <tr>
                            <th>交易时间</th>
                            <th>客户名称</th>
                            <th>交易盈利</th>
                            <th>公司盈利</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var stock in Model.ManagerViewTableSummary)
                        {
                            <tr data-userid="@stock.UserId" data-clientname="@stock.ClientName" data-tradingdate="@stock.TradingDate" data-transferamount="@stock.TransferAmount">
                                <td>@stock.TradingDate</td>
                                <td>@stock.ClientName</td>
                                <td>@stock.OperateProfit</td>
                                <td>@stock.CompanyProfit</td>
                                <td>
                                    @if (stock.CanTransfer)
                                    {
                                        <a href="javascript:void(0)" data-toggle="tooltip" data-placement="bottom" title="转账" class="btn btn-xs btn-default transferAction"><i class="fa fa-edit"></i> </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="col-md-12">
        <!-- DONUT CHART -->
        <div class="box">
            <div class="box-header with-border">
                <i class="fa fa-users"></i> <h3 class="box-title">没有相关数据</h3>
                <div class="box-tools pull-right">
                    <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                </div>
            </div>
            <div class="box-body">
                请重新选择筛选时间
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>
}

