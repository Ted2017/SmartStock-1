@{
    ViewBag.Title = "StockManager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using SmartStock.Core.Models
@model List<TradingStockInfo>

<section class="content-header">
    <h1>
        股票
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-gear"></i>管理</a></li>
        <li class="active">股票</li>
    </ol>
</section>

<section class="content">
    <div class="row"></div>
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <i class="fa fa-money"></i><h3 class="box-title">股票</h3>
                </div>
                <div class="box-body admin-content">
                    @Html.Partial("_TradingStockPartial", Model)
                </div>
                <div class="box-footer">
                    <a href="javascript:void(0)" class="btn btn-primary pull-right stock-add-btn"><i class="fa fa-plus"></i> 添加</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row addStockDiv">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">添加股票</h3>
                </div>
                <div class="box-body">
                    <label class="col-sm-1 redAsteriskBefore">用户名称</label>
                    <input type="text" class="col-sm-11 login-username" />
                </div>
                <div class="box-body">
                    <label class="col-sm-1 redAsteriskBefore">登陆账号</label>
                    <input type="text" class="col-sm-11 stock-account-login" />
                </div>
                <div class="box-body">
                    <label class="col-sm-1 redAsteriskBefore">交易密码</label>
                    <input type="text" class="col-sm-11 stock-account-pwd" />
                </div>
                <div class="box-body">
                    <label class="col-sm-1 redAsteriskBefore">初始资产</label>
                    <input type="text" class="col-sm-11 stock-original-amount" />
                </div>
                <div class="box-body">
                    <label class="col-sm-1 redAsteriskBefore">可用资金</label>
                    <input type="text" class="col-sm-11 stock-available-amount" />
                </div>
                <div class="box-body">
                    <label class="col-sm-1 redAsteriskBefore">股票市值</label>
                    <input type="text" class="col-sm-11 stock-amount" />
                </div>
                <div class="box-footer">
                    <button type="button" class="btn btn-primary pull-right stock-btn stock-save-btn"> 保存</button>
                    <button type="button" class="btn btn-primary pull-right stock-btn stock-cancel-btn"> 撤销</button>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/Scripts/stock/stockmanager.js"></script>

@section Scripts{
    <script type="text/javascript">

        $(document).ready(function () {
            initCommonDataTable('#StockDataTbl');
            bindStockManagerEvent();
        });

    </script>
}